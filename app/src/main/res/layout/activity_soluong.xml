<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size10dp"
    android:orientation="vertical"
    tools:context="com.example.kane.orderfood.Activity.ThemBanAnActivity">

    <EditText
        android:id="@+id/edt_soluongmonan"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dongy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorDongY"
            android:text="@string/dongy"
            android:layout_weight="1"
            android:layout_margin="@dimen/size10dp"/>

        <Button
            android:id="@+id/btn_huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorHuy"
            android:text="@string/huy"
            android:layout_margin="@dimen/size10dp"
            />
    </LinearLayout>
</LinearLayout>
